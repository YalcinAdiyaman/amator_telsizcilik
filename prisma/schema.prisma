// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  callsign  String? // Amateur Radio Callsign (e.g., TA3ABC)
  name      String?
  xp        Int      @default(0)
  level     String   @default("NOVICE") // NOVICE, OPERATOR, ELITE
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  progress UserProgress[]
  badges   UserBadge[]
}

model UserProgress {
  userId      String
  moduleId    String // e.g., 'regulations', 'technical'
  completed   Boolean  @default(false)
  score       Int?
  completedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, moduleId])
}

model UserBadge {
  userId    String
  badgeId   String // e.g., 'first_qso', 'quiz_master'
  awardedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, badgeId])
}

model Repeater {
    id String @id @default(cuid())
    callsign String
    frequency Float
    offset Float
    tone Float?
    city String
    status String // ACTIVE, MAINTENANCE
    latitude Float
    longitude Float
    updatedAt DateTime @updatedAt
}
